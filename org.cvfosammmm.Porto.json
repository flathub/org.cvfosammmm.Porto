{
    "app-id": "org.cvfosammmm.Porto",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "porto",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "qhull",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.qhull.org/download/qhull-2020-src-8.0.2.tgz",
                    "sha256": "b5c2d7eb833278881b952c8a52d20179eab87766b00b865000469a45c1838b7e"
                }
            ]
        },
        {
            "name": "lapack",
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_TESTING=OFF",
                "-DLAPACKE=ON",
                "-DCBLAS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Reference-LAPACK/lapack/archive/refs/tags/v3.10.1.tar.gz",
                    "sha512": "0500bbbb48483208c0a35b74972ff0059c389da6032824a2079637266a99fa980882eedf7f1fc490219ee4ff27812ac8c6afe118e25f40a9c2387e7b997762fb"
                }
            ],
            "cleanup": [ "/lib/cmake" ]
        },
        "python3-requirements.json",
        {
            "name": "gtksourceview",
            "config-opts": ["--enable-gtk-doc=no"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.11.tar.xz",
                    "sha256": "691b074a37b2a307f7f48edc5b8c7afa7301709be56378ccf9cc9735909077fd"
                }
            ]
        },
        {
            "name": "porto",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 resources/org.cvfosammmm.Porto.desktop  ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "install -Dm644 resources/images/org.cvfosammmm.Porto.svg  ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
                "install -Dm644 resources/org.cvfosammmm.Porto.appdata.xml  ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.appdata.xml",
                "mkdir -p /app/bin",
                "cp -R app /app/bin/",
                "cp -R cell /app/bin/",
                "cp -R dialogs /app/bin/",
                "cp -R helpers /app/bin/",
                "cp -R resources /app/bin/",
                "cp -R result_factory /app/bin/",
                "cp -R notebook /app/bin/",
                "cp -R workspace /app/bin/",
                "install -D __main__.py /app/bin/porto"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cvfosammmm/Porto.git",
                    "tag": "v0.0.2",
                    "commit": "2d98041b4e727f292cd6b984ccf02b948e7b28fe"
                }
            ]
        }
    ]
}
